{
  "name": "AI Assistant for Home Assistant",
  "version": "2.4.0",
  "slug": "claude-backend",
  "description": "AI-powered smart home assistant with Claude, ChatGPT, Gemini and GitHub Copilot support",
  "url": "https://github.com/Bobsilvio/ha-claude",
  "init": false,
  "arch": [
    "aarch64",
    "amd64",
    "armv7"
  ],
  "startup": "application",
  "apparmor": false,
  "boot": "auto",
  "ingress": true,
  "ingress_port": 5000,
  "ingress_entry": "/",
  "panel_icon": "mdi:robot",
  "panel_title": "AI Assistant",
  "homeassistant_api": true,
  "map": [
    "config:rw"
  ],
  "ports": {
    "5000/tcp": null
  },
  "ports_description": {
    "5000/tcp": "AI Assistant API"
  },
  "environment": {
    "DEBUG_MODE": "False"
  },
  "options": {
    "ai_provider": "anthropic",
    "anthropic_api_key": "",
    "openai_api_key": "",
    "google_api_key": "",
    "github_token": "",
    "ai_model": "",
    "api_port": "5000",
    "debug_mode": false,
    "timeout": "30",
    "max_retries": "3"
  },
  "schema": {
    "ai_provider": "list(anthropic|openai|google|github)",
    "anthropic_api_key": "password?",
    "openai_api_key": "password?",
    "google_api_key": "password?",
    "github_token": "password?",
    "ai_model": "str?",
    "api_port": "str",
    "debug_mode": "bool?",
    "timeout": "str?",
    "max_retries": "str?"
  },
  "documentation": "https://github.com/Bobsilvio/ha-claude",
  "support": "https://github.com/Bobsilvio/ha-claude/issues",
  "maintainers": [
    "Bobsilvio"
  ]
}
