{
  "domain": "claude",
  "name": "Claude AI Assistant (Haiku/Sonnet/Opus)",
  "codeowners": ["@Bobsilvio"],
  "config_flow": true,
  "documentation": "https://github.com/Bobsilvio/ha-claude",
  "requirements": ["aiohttp>=3.9.0", "pydantic>=2.0.0"],
  "version": "1.0.0",
  "homeassistant": "2024.1.0",
  "issue_tracker": "https://github.com/Bobsilvio/ha-claude/issues",
  "iot_class": "cloud_polling",
  "services": {
    "send_message": {
      "name": "Send Message to Claude",
      "description": "Send a message to Claude AI",
      "fields": {
        "message": {
          "name": "Message",
          "description": "Message to send",
          "example": "Turn on all lights in the living room"
        },
        "context": {
          "name": "Context",
          "description": "Additional context for the AI",
          "example": "Scene: evening, Time: 20:00"
        }
      }
    },
    "execute_automation": {
      "name": "Execute Automation",
      "description": "Execute an automation by name or ID",
      "fields": {
        "automation_id": {
          "name": "Automation ID",
          "description": "ID of the automation to execute",
          "example": "automation.my_automation"
        }
      }
    },
    "execute_script": {
      "name": "Execute Script",
      "description": "Execute a script by name or ID",
      "fields": {
        "script_id": {
          "name": "Script ID",
          "description": "ID of the script to execute",
          "example": "script.my_script"
        },
        "variables": {
          "name": "Variables",
          "description": "Variables to pass to the script",
          "example": "{'temperature': 22, 'brightness': 100}"
        }
      }
    },
    "get_entity_state": {
      "name": "Get Entity State",
      "description": "Get the current state of an entity",
      "fields": {
        "entity_id": {
          "name": "Entity ID",
          "description": "ID of the entity",
          "example": "light.living_room"
        }
      }
    },
    "call_service": {
      "name": "Call Home Assistant Service",
      "description": "Call any Home Assistant service",
      "fields": {
        "service": {
          "name": "Service",
          "description": "Service to call in format domain.service",
          "example": "light.turn_on"
        },
        "data": {
          "name": "Data",
          "description": "Service data as JSON",
          "example": "{'entity_id': 'light.living_room', 'brightness': 255}"
        }
      }
    },
    "create_automation": {
      "name": "Create Automation",
      "description": "Create a new automation dynamically",
      "fields": {
        "automation_name": {
          "name": "Automation Name",
          "description": "Name for the new automation",
          "example": "Turn on lights at sunset"
        },
        "description": {
          "name": "Description",
          "description": "Description of what the automation does",
          "example": "Automatically turns on lights when sun sets"
        },
        "trigger": {
          "name": "Trigger",
          "description": "Trigger configuration as JSON",
          "example": "{'platform': 'sun', 'event': 'sunset'}"
        },
        "condition": {
          "name": "Condition",
          "description": "Optional condition as JSON",
          "example": "{'condition': 'state', 'entity_id': 'binary_sensor.people_home', 'state': 'on'}"
        },
        "action": {
          "name": "Action",
          "description": "Action to execute as JSON",
          "example": "{'service': 'light.turn_on', 'target': {'entity_id': 'light.living_room'}}"
        }
      }
    }
  }
}
